# Stage 1: Build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy csproj and restore dependencies
COPY QuickSell.Api/*.csproj ./QuickSell.Api/
RUN dotnet restore QuickSell.Api/QuickSell.Api.csproj

# Copy everything else and publish
COPY QuickSell.Api/. ./QuickSell.Api/
RUN dotnet publish QuickSell.Api/QuickSell.Api.csproj -c Release -o /app/out

# Stage 2: Run
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/out .
ENTRYPOINT ["dotnet", "QuickSell.Api.dll"]

